}

[id="top-nav"] > [class*="navbar-nav"] > li > [class*=btn-primary]:hover,
[id="watching-wrapper"] > div > div > div > div > div > [class*=btn-primary]:hover,
[id="scrobblers-wrapper"] > div > div > div > div > div > [class*=btn-primary]:hover,
[id="apps-wrapper"] > div > div > div > div > div > [class*=btn-primary]:hover,
[id="api-wrapper"] > div > div > div > div > [class*=btn-primary]:hover {
