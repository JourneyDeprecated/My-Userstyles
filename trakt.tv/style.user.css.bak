  background-size: 100% 100% !important;
}

[id="watchnow-wrapper"] {
  background-color: var(--bg) !important;
}

[id="api-wrapper"] {
  border-top: solid 1px var(--border) !important;

  background-color: var(--bg) !important;
}

[id="scrobblers-wrapper"] > div > div > div > div > h1,
[id="scrobblers-wrapper"] > div > div > div > div > h2,
[id="watchnow-wrapper"] > div > div > div > div > h1,
[id="watchnow-wrapper"] > div > div > div > div > h2,
[id="api-wrapper"] > div > div > div > h1,
[id="api-wrapper"] > div > div > div > h2 {
  color: var(--normaltxt-2) !important;
}

[id="watchnow-wrapper"] > [class="shade"],
[id="api-wrapper"] > [class="shade"] {
  display: none !important;
}

}

@-moz-document url-prefix("https://trakt.tv") {
