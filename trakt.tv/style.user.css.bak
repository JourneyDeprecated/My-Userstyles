/* ==UserStyle==
@name        Dark Trakt.tv
@namespace   github.com/JourneyOver/My-Userstyles/tree/Cleanup_and_Rewrites/trakt.tv
@homepageURL https://github.com/JourneyOver/My-Userstyles/tree/Cleanup_and_Rewrites/trakt.tv
@supportURL  https://github.com/JourneyOver/My-Userstyles/issues
@version     3.0.0
@updateURL   https://raw.githubusercontent.com/JourneyOver/My-Userstyles/Cleanup_and_Rewrites/trakt.tv/style.user.css
@description Dark Trakt.tv Theme
@author      JourneyOver (https://github.com/JourneyOver)
@license     CC BY-NC-SA 4.0

@advanced color bg "background" #1d1e22
@advanced color border "borders" #000102
@advanced color txt "text" #ebebeb
@advanced color htxt "hover text" #ebebeb

@advanced color bbg "button background" #1d1e22
@advanced color bborder "button borders" #000102
@advanced color btxt "button text" #888
@advanced color bhoverbg "button hover background" #2c2c33
@advanced color bhovertxt "button hover text" #ebebeb

@advanced color scrollbar "scrollbar color" #333333
@advanced color scrollbart "scrollbar thumb color" #555555

@advanced color link "link color" #ffffff
@advanced color hlink "link hover color" #338682

@advanced dropdown Ads "Hide Ads?" {
ADSY "Yes" <<<EOT
[class*=huckster], [id*=huckster] { display: none !important; } EOT;
ADSN "No" <<<EOT
 EOT;
}

@advanced dropdown Shop "Hide Shop Button?" {
ShopY "Yes" <<<EOT
[id*="header-shop"], .popover-shop { display: none; } EOT;
ShopN "No" <<<EOT
 EOT;
}

@advanced dropdown VIP "Hide VIP Stuff?" {
VIPY "Yes" <<<EOT
a[href*="/vip/"], a[href*="/widgets"], a[href*="/year"], a[href*="/forums"], [data-tooltip="RSS Feed"], [data-tooltip="iCal Feed"], [data-tooltip="CSV Export"], [data-tooltip="Notifications"], [data-title="Create a custom calendar"], [data-title="Clone into your account"] { display: none !important; } EOT;
VIPN "No" <<<EOT
 EOT;
}

==/UserStyle== */

@-moz-document url-prefix("https://trakt.tv") {
/*::::::::::::::::::::::::::::::::::::::::::::::::::::::::: SETTINGS :::::::::::::::::::::::::::::::::::::::::::::::::::::::*/

:root {
  /* Normal settings */
  --bg: /*[[bg]]*/ !important; /* var(--bg) */
  --border: /*[[border]]*/!important; /* var(--border) */
  --normaltxt-1: #888 !important; /* var(--normaltxt-1) */
  --normaltxt-2: /*[[txt]]*/ !important; /* var(--normaltxt-2) */
  --hovertxt: /*[[htxt]]*/ !important; /* var(--hovertxt) */
  --transparent: rgba(29, 30, 34, .65) !important; /* var(--transparent) */

  /* Button Settings */
  --button-bg: /*[[bbg]]*/ !important; /* var(--button-bg) */
  --button-border: /*[[bborder]]*/ !important; /* var(--button-border) */
  --button-txt: /*[[btxt]]*/ !important; /* var(--button-txt) */
  --button-boxshadow: rgba(0, 0, 0, .75) !important; /* var(--button-boxshadow) */

  --button-hoverbg: /*[[bhoverbg]]*/ !important; /* var(--button-hoverbg) */
  --button-hovertxt: /*[[bhovertxt]]*/ !important; /* var(--button-hovertxt) */

  /* Scroll Bar Settings */
  --scrollbar-color: /*[[scrollbar]]*/ !important; /* var(--scrollbar-color) */
  --scrollbart-color: /*[[scrollbart]]*/ !important; /* var(--scrollbart-color) */

  /* Link Settings */
  --link-color: /*[[link]]*/ !important; /* var(--link-color) */
  --link-hovercolor: /*[[hlink]]*/ !important; /* var(--link-hovercolor) */
}

}

@-moz-document url-prefix("https://trakt.tv") {
/*::::::::::::::::::::::::::::::::::::::::::::::::::::::::: Globals :::::::::::::::::::::::::::::::::::::::::::::::::::::::*/

/*::: Font :::*/
@font-face{font-family:'Custom';src:url(https://fonts.gstatic.com/s/ubuntu/v9/sDGTilo5QRsfWu6Yc11AXg.woff2)}
:not(code):not(pre){font-family:'Custom'}

/*:: Thinner/Darker Scroll bar ::*/
::-webkit-scrollbar-corner {
  background-color: var(--scrollbar-color);
}

::-webkit-scrollbar {
  width: 10px;
  height: 10px;

  background-color: var(--scrollbar-color);
}

::-webkit-scrollbar-thumb {
  -webkit-border-radius: 2px;
  border-radius: 2px;

  background: var(--scrollbart-color);
}

/*::: Navigation Menu :::*/
.no-touch header#top-nav,
.no-touch header#top-nav:hover {
  background: var(--transparent) !important;
}

[id="user-menu"] {
  background: var(--transparent) !important;
}

/* Avatar */
[id*="top-nav"] > [class*="nav"] > [class*="hidden-xs"] > [id*="desktop-user-avatar"] > [class*="avatar"] {
  border-radius: 0 !important;
}

/*:: Logos ::*/
div[id="top-brand"] > a > img,
[class="trakt-full"] > img {
  visibility: hidden !important;
}

div[id="top-brand"] {
  width: 65px !important;
  height: 65px !important;

  background: url("https://raw.githubusercontent.com/JourneyOver/My-Userstyles/Cleanup_and_Rewrites/trakt.tv/img/logos/slightly_darkerlight_logo_(65_x_65).png") no-repeat !important;
}

header[id="top-nav"] > [id="top-brand"] > a > [class="bottom-wrapper"] > [class="bottom"],
.no-touch header#top-nav:hover #top-brand .bottom-wrapper .bottom {
  background: none !important;
}

header[id="top-nav"] > [id="top-brand"] > a > [class="bottom-wrapper"] {
  overflow: hidden !important;

  position: static !important;
  bottom: 0 !important;
  z-index: -1 !important;

  width: 65px !important;
  height: 1px !important;
}

[class="trakt-full"] {
  border-bottom: none !important;
  height: 65px !important;

  background: url("https://raw.githubusercontent.com/JourneyOver/My-Userstyles/Cleanup_and_Rewrites/trakt.tv/img/logos/slightly_darkerlight_logo_(65_x_65).png") no-repeat !important;
}

/*:: Social Buttons ::*/
[class*="btn-twitter"],
[class*="btn-facebook"],
[class*="btn-google"],
[class*="btn-tumblr"],
[class*="btn-medium"],
[class*="btn-chrome"],
[class*="btn-slack"],
[class*="btn-pushover"],
[class*="btn-pushbullet"],
#auth-form-wrapper .auth-services .btn.btn-google {
  border: 1px solid var(--button-border) !important;

  color: var(--button-txt) !important;
  background: var(--button-bg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

[class*="btn-twitter"]:hover,
[class*="btn-facebook"]:hover,
[class*="btn-google"]:hover,
[class*="btn-tumblr"]:hover,
[class*="btn-medium"]:hover,
[class*="btn-chrome"]:hover,
[class*="btn-slack"]:hover,
[class*="btn-pushover"]:hover,
[class*="btn-pushbullet"]:hover,
#auth-form-wrapper .auth-services .btn.btn-google:hover {
  color: var(--button-hovertxt) !important;
  background: var(--button-hoverbg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

/*:: Links ::*/
[class="bottom-wrapper"] > a,
[class="form-inputs with-icons"] > [class="with-icon"] > a[href*="/auth/password/new"],
[id="watching-wrapper"] > div > div > div > div > div > div > a,
[id="watching-wrapper"] > div > div > div > div > h2 > a,
[id="main-nav"] > [class*="nav"] > li > a,
footer > [class="links"] > [class="left-side"] > li > a,
footer > [class="links"] > [class="social"] > a,
footer > [class="copyright"] > a {
  color: var(--link-color) !important;
}

[class="bottom-wrapper"] > a:hover,
[class="form-inputs with-icons"] > [class="with-icon"] > a[href*="/auth/password/new"]:hover,
[id="watching-wrapper"] > div > div > div > div > div > div > a:hover,
[id="watching-wrapper"] > div > a:hover,
[id="watching-wrapper"] > div > div > div > div > h2 > a:hover,
[id="main-nav"] > [class*="nav"] > li > a:hover,
footer > [class="links"] > [class="left-side"] > li > a:hover,
footer > [class="links"] > [class="social"] > a:hover,
footer > [class="copyright"] > a:hover {
  color: var(--link-hovercolor) !important;
}

/*:: Dark Trakt Version ::*/
[class="trakt"]::after {
  white-space: pre;

  content: "\A                  Dark Trakt.tv Ver. 3.0.0";
}

}

@-moz-document url-prefix("https://trakt.tv") {
/*::::::::::::::::::::::::::::::::::::::::::::::::::::::::: JOIN & SIGN IN Page :::::::::::::::::::::::::::::::::::::::::::::::::::::::*/

/*:: Auth Form ::*/
[id="auth-form-wrapper"],
[class="auth-services-wrapper"],
[id="auth-form-wrapper"] > [class="bottom-wrapper"],
[id="auth-form-wrapper"] > [id="new_user"] > [id="error-explanation"],
[id="auth-form-wrapper"] > [id="new_user"] > [id="error_explanation"] {
  border-top: 0 !important;
  border-radius: 1px !important;

  color: var(--normaltxt-1) !important;
  background-color: var(--bg) !important;
}

/*:: Text Forms ::*/
[id="auth-form-wrapper"] > [id="new_user"] > div > div > div > div > [id="user_email"],
[id="auth-form-wrapper"] > [id="new_user"] > div > div > div > div > [id="user_login"],
[id="auth-form-wrapper"] > [id="new_user"] > div > div > div > div > [id="user_username"],
[id="auth-form-wrapper"] > [id="new_user"] > div > div > div > div > [id="user_password"],
[id="auth-form-wrapper"] > [id="new_user"] > div > div > div > div > [id="user_password_confirmation"] {
  border: 1px solid var(--border) !important;

  color: var(--normaltxt-2) !important;
  background-color: var(--bg) !important;
}

/*:: Sign In & Join Trakt Button ::*/
[id="auth-form-wrapper"] > [id="new_user"] > div > [class*="btn-block"] {
  border: 1px solid var(--button-border) !important;

  color: var(--button-txt) !important;
  background: var(--button-bg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

[id="auth-form-wrapper"] > [id="new_user"] > div > [class*="btn-block"]:hover {
  color: var(--button-hovertxt) !important;
  background: var(--button-hoverbg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

/*:: Logo ::*/
[id="auth-form-wrapper"] > a > [class="logo-wrapper"] > div[class="logo"] {
  background: url("https://raw.githubusercontent.com/JourneyOver/My-Userstyles/Cleanup_and_Rewrites/trakt.tv/img/logos/dark_logo_(400_x_400).png") no-repeat !important;
  background-size: 128px 128px !important;
}

}

@-moz-document url-prefix("https://trakt.tv") {
/*::::::::::::::::::::::::::::::::::::::::::::::::::::::::: Welcome Page :::::::::::::::::::::::::::::::::::::::::::::::::::::::*/

/*:: Avatar Image ::*/
[id="watching-wrapper"] > div > div > div > div > div > img,
[id="watching-wrapper"] > div > div > div > div > [id="avatar-wrapper"] > [class*="dropzone"] {
  border: 2px solid var(--border) !important;
  border-radius: 0 !important;
}

/*:: Text Forums & Dropdown Menu ::*/
[id="watching-wrapper"] > div > div > div > div > [id*="edit_user_"] > [class*="form-inputs"],
[id="watching-wrapper"] > div > div > div > div > [id*="edit_user_"] > div > div > div > div > [class*="form-control"] {
  border: 0 !important;

  color: var(--normaltxt-2) !important;
  background-color: var(--bg) !important;
}

/*:: Buttons ::*/
[id="watching-wrapper"] > div > div > div > div > [id*="edit_user_"] > div > [id="profile-next"],
[class="genre enabled"] > div,
[id="watching-wrapper"] > div > div > div > div > div > [id="genres-next"],
[id="watching-wrapper"] > div > div > div > [id="actions-next"],
[id="watching-wrapper"] > div > div > div > [id="sharing-next"],
[id="watching-wrapper"] > div > div > div > [id="notifications-next"],
[class*="shepherd-button"] {
  border: 1px solid var(--button-border) !important;

  color: var(--button-txt) !important;
  background: var(--button-bg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

[id="watching-wrapper"] > div > div > div > div > [id*="edit_user_"] > div > [id="profile-next"]:hover,
[id="watching-wrapper"] > div > div > div > div > div > [id="genres-next"]:hover,
[id="watching-wrapper"] > div > div > div > [id="actions-next"]:hover,
[id="watching-wrapper"] > div > div > div > [id="sharing-next"]:hover,
[id="watching-wrapper"] > div > div > div > [id="notifications-next"]:hover,
[class*="shepherd-button"]:hover {
  color: var(--button-hovertxt) !important;
  background: var(--button-hoverbg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

/*:: welcome/3 popup info ::*/
[class="shepherd-content"] {
  color: var(--normaltxt-2) !important;
  background-color: var(--bg) !important;
}

/*:: View more tv shows/movies hover ::*/
[id="watching-wrapper"] > div > div > div > div > [id="genre-items-shows"] > [class="view-more"]:hover,
[id="watching-wrapper"] > div > div > div > div > [id="genre-items-movies"] > [class="view-more"]:hover {
  border: var(--border) !important;

  color: var(--button-hovertxt) !important;
  background: var(--button-hoverbg) !important;

  box-shadow: 1px 1px 5px 1px var(--button-boxshadow) !important;
}

}

@-moz-document url-prefix("https://trakt.tv") {
/*::::::::::::::::::::::::::::::::::::::::::::::::::::::::: Home Page :::::::::::::::::::::::::::::::::::::::::::::::::::::::*/

/*:: Buttons ::*/
[id="top-nav"] > [class*="navbar-nav"] > li > [class*=btn-primary],
